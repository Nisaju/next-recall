{
  "name": "@next-recall/alert",
  "version": "0.2.2",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/alert.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "tailwind.preset.js"
  ],
  "author": "Anjianto",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build && yarn tailwindcss -i src/main.css -o dist/index.css -m",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "watch:css": "yarn postcss src/main.css -o dist/index.css"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@size-limit/preset-small-lib": "5.0.3",
    "@storybook/addon-essentials": "6.3.8",
    "@storybook/addon-info": "5.3.21",
    "@storybook/addon-links": "6.3.8",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/addons": "6.3.8",
    "@storybook/react": "6.3.8",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "autoprefixer": "10.3.4",
    "babel-loader": "8.2.2",
    "babel-preset-react-app": "10.0.0",
    "cssnano": "5.0.8",
    "husky": "7.0.2",
    "postcss": "8.3.6",
    "postcss-cli": "8.3.1",
    "postcss-nested": "5.0.6",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-docgen-typescript-loader": "3.7.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "size-limit": "5.0.3",
    "tailwindcss": "2.2.9",
    "tsdx": "0.14.1",
    "tslib": "2.3.1",
    "typescript": "4.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/alert.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/alert.esm.js",
      "limit": "10 KB"
    }
  ]
}